{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "lib": [
      "esnext"
    ],
    "jsx": "react-native",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": [
        "models/*"
      ],
      "@views/*": [
        "views/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@viewmodels/*": [
        "viewmodels/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
